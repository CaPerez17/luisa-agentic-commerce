# ============================================================================
# LUISA - AI Commercial Assistant for El Sastre
# Environment Configuration Example
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env in the same directory
# 2. Fill in the values with your actual credentials
# 3. NEVER commit .env to git (it's in .gitignore)
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DB_PATH=luisa.db

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# Enable/disable OpenAI integration
OPENAI_ENABLED=false

# OpenAI API Key (get from https://platform.openai.com/api-keys)
# Replace with your actual key: sk-proj-...
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model (recommended: gpt-4o-mini for cost-effectiveness)
OPENAI_MODEL=gpt-4o-mini

# OpenAI Response Limits
OPENAI_MAX_OUTPUT_TOKENS=180
OPENAI_MAX_INPUT_CHARS=1200
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT_SECONDS=8

# ============================================================================
# WHATSAPP CLOUD API (Meta Business)
# ============================================================================
# Enable/disable WhatsApp integration
WHATSAPP_ENABLED=false

# Get these from: https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# WhatsApp Business Account ID (for Cloud API)
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Test phone number for notifications (format: 573001234567)
TEST_NOTIFY_NUMBER=573001234567

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
# Enable in-memory cache for FAQs
CACHE_ENABLED=true
CACHE_MAX_SIZE=200
CACHE_TTL_HOURS=12

# ============================================================================
# GOOGLE DRIVE (Optional - for assets storage)
# ============================================================================
# If using Google Drive for image storage
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id

# ============================================================================
# ASSETS CONFIGURATION
# ============================================================================
# Local assets directory
ASSETS_DIR=assets
ASSETS_CATALOG_DIR=assets/catalog
ASSETS_CACHE_DIR=assets/cache

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# FastAPI server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS (for frontend)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable specific features for testing
FEATURE_SHADOW_MODE=true
FEATURE_INTERNAL_NOTIFICATIONS=true
FEATURE_TRACEABILITY=true

# ============================================================================
# SECURITY
# ============================================================================
# API Keys for internal services (optional)
INTERNAL_API_KEY=your-internal-api-key

# JWT Secret (if implementing authentication)
JWT_SECRET=your-jwt-secret-key

# ============================================================================
# BUSINESS CONTEXT
# ============================================================================
# Business name and contact info (used in responses)
BUSINESS_NAME="Almacén y Taller El Sastre"
BUSINESS_CITY="Montería, Colombia"
BUSINESS_PHONE="+57 300 123 4567"
BUSINESS_ADDRESS="Calle 30 #4-25, Montería, Córdoba"

# Business hours (used for automatic responses)
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00
BUSINESS_TIMEZONE=America/Bogota
